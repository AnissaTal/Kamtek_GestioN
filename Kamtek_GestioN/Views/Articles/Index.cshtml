@model IEnumerable<Kamtek_GestioN.Models.Article>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Inventaire</h1>

<p>
    <a class="btn" asp-action="Create">
        <img height="60" width="65" src="~/Images/Panier.png" asp-append-version="true" />
    </a>
    <a class="btn" asp-action="PDF">
        <img height="50" width="50" src="~/Images/pdf.png"  asp-append-version="true" />
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEntree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEntree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.Nom)
            </td>
            <td>
                
                <div class="row">
                    <a class="btn btn-info m-1 btn-block" asp-action="Details" asp-route-id="@item.Id">Voir l'article</a>

                    <a class="btn btn-info m-1 btn-block" asp-route-id="@item.Id" asp-action="Create" asp-controller="Commandes"> Ajouter à la commande </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
