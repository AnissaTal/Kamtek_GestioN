@model IEnumerable<Kamtek_GestioN.Models.Categorie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Catégories</h1>

<a class="btn" asp-action="Create">
    <img height="60" width="65" src="~/Images/Panier.png" asp-append-version="true" />
</a>

<a class="btn" asp-action="PDF">
    <img height="50" width="50" src="~/Images/pdf.png" asp-append-version="true" />
</a>
<table class="table w-50">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>

                    <a class="btn btn-info btn-block" asp-action="Details" asp-route-id="@item.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
