@model Kamtek_GestioN.Models.Commande

@{
    ViewData["Title"] = "Mon Panier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Sauvegarder de la commande</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    * Ajouter une référence du contrat pour les retours d'articles'
                    <label asp-for="RefContrat" class="control-label"></label>
                    <input asp-for="RefContrat" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DateCommande" class="control-label"></label>
                    <input asp-for="DateCommande" class="form-control" />
                    <span asp-validation-for="DateCommande" class="text-danger"></span>
                </div>
                <div>
                    <p>Récapitulatif des articles : </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Utilisateur
                                </th>
                                <th>
                                    Nom Article
                                </th>
                                <th>
                                    Quantité
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.commande)
                            {
                                <tr>
                                    <td>
                                        @item.UserId
                                    </td>
                                    <td>
                                        @item.Article.Designation
                                    </td>
                                    <td>
                                        @item.Quantite
                                    </td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="form-group">
                    <input type="submit" value="Sauvegarder" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Retour la Commande</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
