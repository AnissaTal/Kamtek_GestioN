@model Kamtek_GestioN.Models.Commande

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creation de Commandes</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RefContrat" class="control-label"></label>
                <input asp-for="RefContrat" class="form-control" />
                <span asp-validation-for="RefContrat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCommande" class="control-label"></label>
                <input asp-for="DateCommande" class="form-control" />
                <span asp-validation-for="DateCommande" class="text-danger"></span>
            </div>
            <div>
                <p> @ViewBag.lignCMD.Article.Id </p>
                <p> @ViewBag.lignCMD.Article.Designation </p>
                <p> @ViewBag.lignCMD.Article.Descriptif </p>
          
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
