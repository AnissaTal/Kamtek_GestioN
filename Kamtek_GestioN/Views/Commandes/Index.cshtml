@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Commande</h1>

@if (ViewBag.commande == null)
{
    <p>Vous n'avez pas encore de commande en cours</p>
    <p>Vous devez ajouter un article pour créer une commande en cours</p>

    <a class="btn btn-secondary" asp-controller="Articles" asp-action="Index">Ajouter un article</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Désignation</th>
                <th>Quantité</th>
                <th>Date de création</th>
                <th>Option</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.commande)
            {
                <tr>
                    <td>@item.Article.Id</td>
                    <td>@item.Article.Designation</td>
                    <td>
                        @item.Quantite
                        <a class="btn btn-info" asp-controller="Commandes" asp-action="AddQuantity" asp-route-id="@item.Article.Id">+</a>
                        <a class="btn btn-info" asp-controller="Commandes" asp-action="RemoveQuantity" asp-route-id="@item.Article.Id">-</a>
                     </td>
                    <td>@item.DateCreated</td>
                    <td><a class="btn btn-info" asp-controller="Commandes" asp-action="remove" asp-route-id="@item.Article.Id">Retirer</a></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>


    <a class="btn btn-secondary" asp-controller="Articles" asp-action="Index">Ajouter un article</a>
    <a class="btn btn-info" asp-controller="Commandes" asp-action="Create">Valider le bon</a>
}


